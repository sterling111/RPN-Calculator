                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginEnd="2pt"
                android:layout_weight="1"
                android:backgroundTint="@color/black_currant"
                android:text="@string/bunine"
                android:textColor="#D500F9"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="VisualLintButtonSize"></Button>

            <Button
                android:id="@+id/budivide"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginEnd="2pt"
                android:layout_weight="1"
                android:backgroundTint="#FF9800"
                android:text="@string/budivide"
                android:textColor="#4527A0"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="VisualLintButtonSize"></Button>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/bu4"
