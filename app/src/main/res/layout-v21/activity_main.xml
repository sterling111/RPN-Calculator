                tools:ignore="VisualLintButtonSize"></Button>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/bu0"
